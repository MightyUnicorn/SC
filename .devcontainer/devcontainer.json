{
  "name": "NSE Analytics Platform",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "hostRequirements": {
    "cpus": 2
  },
  
  "waitFor": "onCreateCommand",
  "onCreateCommand": "python3 -m pip install --upgrade pip",
  "updateContentCommand": "python3 -m pip install -r requirements.txt",
  "postCreateCommand": "echo 'âœ… Python environment ready! Open notebooks/NSE_Complete_Demo.ipynb to get started.'",
  
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "notebooks/NSE_Complete_Demo.ipynb"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance", 
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "python.terminal.activateEnvironment": true,
        "jupyter.askForKernelRestart": false,
        "files.autoSave": "afterDelay"
      }
    }
  },

  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Server",
      "onAutoForward": "silent"
    }
  },

  "remoteUser": "vscode"
}
